  <center>
<h1>Menu</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>Name</th>
      <th>food_name</th>
      <th>price</th>
      <th>User</th>
      
  </tr>
  </thead>  
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= image_tag menu.image, size:50 if menu.image.attached? %></td>
        <td><%= menu.name %></td>
        <td><%= menu.food_name %></td>
        <td><%= menu.price %></td>
        <td><%= menu.user.email %></td>
        <td><%= link_to 'Show', menu ,:class => "btn btn-warning"%> </td>
        <% if menu.user == current_user %>
        <td><%= link_to 'Edit', edit_menu_path(menu) ,:class => "btn btn-success"%></td>
        <td><%= link_to "Destroy", menu, data: {
        method: :delete
           }, :class => "btn btn-danger" %> </td>

        <% end %>
      </tr>
    <% end %> 
  </body>  
</table>
<br>
<%= link_to 'New menu', new_menu_path ,:class => "btn btn-info"%>
</center>






