  <center>
    <h1>Shop</h1>

<!-- <p id="notice"><%#= notice %></p> -->


<table>
  <thead>
    <tr>
      <th>name</th>
      <th>food_name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= image_tag menu.image, size:50 if menu.image.attached? %></td>
        <td><%= menu.name %></td>
        <td><%= menu.food_name %></td>
        <td><%= menu.price %></td>

        <td><%= link_to 'Show', shop_path(menu) %></td>
        <td>
        <%= form_for @order_item, remote: true  do |f|%>
        <%= f.hidden_field :menu_id, :value => menu.id %>
        <%= f.number_field :quantity, :value => 1, :min =>  1%>
        <%= f.submit "Add to Card "%>

        <% end %>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{current_order.order_items.size} items with a value of #{current_order.subtotal }$", cards_path%>

</center>




